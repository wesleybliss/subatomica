{
    "name": "@repo/api",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "start": "node dist/server.js",
        "build": "tsc",
        "typecheck": "tsc --noEmit",
        "lint": "eslint .",
        "lint:dry": "eslint --fix-dry-run .",
        "lint:fix": "eslint --fix .",
        "lint:fix:one": "eslint --fix",
        "test": "vitest run",
        "test:watch": "vitest run --watch",
        "test:ui": "vitest --ui",
        "update-shared": "pnpm up @repo/shared",
        "db:push": "drizzle-kit push",
        "db:dump": "turso db shell subatomica .dump > backups/dump_`ts`.sql",
        "db:restore": "echo 'turso db shell subatomica < backups/dump-.sql'",
        "import:clickup": "tsx bin/importClickupTasks.ts"
    },
    "dependencies": {
        "@hono/node-server": "^1.19.9",
        "@libsql/client": "^0.17.0",
        "@neondatabase/serverless": "^1.0.2",
        "@repo/shared": "workspace:*",
        "@stdlib/string-acronym": "^0.3.3",
        "@types/pg": "^8.16.0",
        "better-auth": "1.5.0-beta.9",
        "dotenv": "^17.2.4",
        "drizzle-orm": "^0.45.1",
        "hono": "^4.11.8",
        "short-unique-id": "^5.3.2",
        "slugify": "^1.6.6",
        "uuid": "^13.0.0",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "@vitest/ui": "^4.0.18",
        "drizzle-kit": "^0.31.8",
        "jsdom": "^28.0.0",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "vite-tsconfig-paths": "^6.0.5",
        "vitest": "^4.0.18"
    },
    "packageManager": "pnpm@10.28.2"
}
